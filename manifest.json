{
  "manifest_version": 2,
  "name": "TLD Blocker by DFIRSec",
  "version": "1.3",
  "description": "Prevent browser from accessing specific Top-Level Domains (TLDs).",
  "icons": {
    "48": "icons/tld-blocker-48.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/tld-blocker-48.png",
    "default_title": "TLD Blocked",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ]
}